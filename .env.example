# Application Environment
NODE_ENV=development
PORT=3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# DynamoDB Configuration
DYNAMODB_TABLES_PREFIX=grove_system_
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=grove-system-storage
S3_REGION=us-east-1

# API Configuration
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Thermal Printer Configuration
THERMAL_PRINTER_IP=192.168.1.100
THERMAL_PRINTER_PORT=9100

# Admin Panel
ADMIN_DEFAULT_EMAIL=admin@grovesystem.com
ADMIN_DEFAULT_PASSWORD=Admin123!

# Swagger Documentation
SWAGGER_TITLE=Grove System API
SWAGGER_DESCRIPTION=Restaurant Management System API
SWAGGER_VERSION=1.0.0